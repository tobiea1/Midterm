<% include ../partials/header.ejs %>


<!--content to add product page -->
<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="post">
          <div class="form-group">
            <label for="IdTextField">Product id</label>
            <input
              type="text"
              class="form-control"
              id="IdTextField"
              placeholder="Product id"
              name="Productid"
          </div>
        </div>
        <div class="form-group">
          <label for="NameTextField">Product Name</label>
          <input
            type="text"
            class="form-control"
            id="NameTextField"
            placeholder="Product name"
            name="Productname" required>
          
        </div>

        <div class="form-group">
          <label for="DescTextField">Description</label>
          <input
            type="text"
            class="form-control"
            id="DescTextField"
            placeholder="Product Description"
            name="Description" required>
        </div>

        <div class="form-group">
          <label for="PriceTextField">Price</label>
          <input
            type="text"
            class="form-control"
            id="PriceTextField"
            placeholder="Product Price"
            name="price" required>
        </div>

        <button class="btn btn-primary" type-"submit">
            <i class="fa fa-edit"></i>Submit</button>

            <a href="/products" class="btn btn-warning"
            ><i class="fa fa-undo"></i> Cancel</a>
        </form>


<% include ../partials/footer.ejs %>